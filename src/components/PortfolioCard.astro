---
/* src/components/PortfolioCard.astro */
export interface Props {
  title: string;
  client: string;
  description: string;
  tags: string[];
  image: string;
  link: string;
  category?: string[]; // pour le filtering
  githubUrl?: string; // URL GitHub optionnelle
  lang?: string; // langue pour l'internationalisation
}

const {
  title,
  client,
  description,
  tags,
  image,
  link,
  category = [],
  githubUrl,
  lang = "fr",
} = Astro.props;
---

<article class="portfolio-card" data-category={category.join(",")}>
  <div class="portfolio-image">
    <img src={image} alt={`${title} project screenshot`} loading="lazy" />
    <div class="portfolio-overlay">
      <a
        href={link}
        target="_blank"
        rel="noopener noreferrer"
        class="portfolio-link"
        aria-label={`View ${title} case study`}
      >
        <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
          <path d="M5 12h14m-7-7 7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>

  <div class="portfolio-content">
    <div class="portfolio-meta">
      <span class="portfolio-client">{client}</span>
      <!-- badge supprimÃ© -->
    </div>

    <h3 class="portfolio-title">
      <a href={link}>{title}</a>
    </h3>

    <p class="portfolio-description">{description}</p>

    <div class="portfolio-tags">
      {tags.map((tag) => <span class="portfolio-tag">{tag}</span>)}
    </div>

    {githubUrl && (
      <div class="portfolio-github">
        <a 
          href={githubUrl} 
          target="_blank" 
          rel="noopener noreferrer"
          class="github-link"
          aria-label={lang === "en" ? `View ${title} source code on GitHub` : `Voir le code source de ${title} sur GitHub`}
        >
          <svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          {lang === "en" ? "View code on GitHub" : "Voir le code sur GitHub"}
        </a>
      </div>
    )}
  </div>
</article>

<style>
  .portfolio-card {
    background: rgb(var(--color-surface) / 0.6);
    border: 1px solid rgb(var(--color-border) / 0.3);
    border-radius: 1.5rem;
    overflow: hidden;
    transition: all var(--transition-normal);
    height: 100%;
    display: flex;
    flex-direction: column;
    backdrop-filter: blur(10px);
  }

  .portfolio-card:hover {
    transform: translateY(-8px);
    box-shadow:
      0 25px 50px rgb(var(--color-shadow) / 0.2),
      0 0 0 1px rgb(var(--color-primary) / 0.2);
    border-color: rgb(var(--color-primary) / 0.5);
  }

  .portfolio-image {
    position: relative;
    aspect-ratio: 16 / 10;
    overflow: hidden;
    background: rgb(var(--color-surface-variant));
  }

  .portfolio-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .portfolio-card:hover .portfolio-image img {
    transform: scale(1.05);
  }

  .portfolio-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgb(var(--color-primary) / 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity var(--transition-normal);
  }

  .portfolio-card:hover .portfolio-overlay {
    opacity: 1;
  }

  .portfolio-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    background: rgb(var(--color-text-inverse));
    color: rgb(var(--color-primary));
    border-radius: 50%;
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .portfolio-link svg {
    transition: transform var(--transition-fast);
  }

  .portfolio-link:hover {
    transform: scale(1.1);
  }

  .portfolio-link:hover svg {
    transform: translateX(2px);
  }

  .portfolio-content {
    padding: 1.5rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .portfolio-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.75rem;
  }

  .portfolio-client {
    font-size: 0.875rem;
    color: rgb(var(--color-text-muted));
    font-weight: 500;
  }

  .portfolio-title {
    margin: 0 0 1rem 0;
    font-size: 1.25rem;
    font-weight: 600;
    line-height: 1.3;
  }

  .portfolio-title a {
    color: rgb(var(--color-text));
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .portfolio-title a:hover {
    color: rgb(var(--color-primary));
  }

  .portfolio-description {
    color: rgb(var(--color-text-muted));
    line-height: 1.6;
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }

  .portfolio-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .portfolio-tag {
    background: rgb(var(--color-surface-variant));
    color: rgb(var(--color-text-muted));
    font-size: 0.75rem;
    font-weight: 500;
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius-sm);
    border: 1px solid rgb(var(--color-border));
  }

  .portfolio-github {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid rgb(var(--color-border) / 0.3);
  }

  .github-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgb(var(--color-surface-variant));
    color: rgb(var(--color-text-muted));
    text-decoration: none;
    border-radius: var(--radius-sm);
    font-size: 0.875rem;
    font-weight: 500;
    transition: all var(--transition-fast);
    border: 1px solid rgb(var(--color-border));
  }

  .github-link:hover {
    background: rgb(var(--color-primary));
    color: rgb(var(--color-text-button));
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgb(var(--color-primary) / 0.2);
  }

  .github-link svg {
    flex-shrink: 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .portfolio-image {
      aspect-ratio: 16 / 9;
    }
    .portfolio-content {
      padding: 1.25rem;
    }
    .portfolio-title {
      font-size: 1.125rem;
    }
  }
</style>
