// src/components/BackToTop.astro
---

<button id="back-to-top-btn" class="back-to-top-btn" aria-label="Retour en haut de la page">
  <div class="button-content">
    <div class="arrow-up">▲</div>
    <div class="bar"></div>
  </div>
</button>

<style>
  .back-to-top-btn {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    width: 54px;
    height: 54px;
    background: linear-gradient(135deg, rgb(var(--color-primary)), rgb(var(--color-primary-hover)));
    color: white;
    border: none;
    border-radius: 50%;
    cursor: pointer;
    z-index: 9999;
    pointer-events: auto;
    
    /* INVISIBLE par défaut */
    opacity: 0;
    visibility: hidden;
    transform: translateY(20px) scale(0.8);
    
    transition: all 0.3s ease;
    
    display: flex;
    align-items: center;
    justify-content: center;
    
    box-shadow:
      0 4px 15px rgba(var(--color-primary), 0.4),
      0 2px 8px rgba(var(--color-primary-hover), 0.3);
  }
  
  /* S'assurer que le bouton est cliquable même quand invisible */
  .back-to-top-btn.visible {
    pointer-events: auto;
  }
  
  .button-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0;
  }
  
  /* Flèche */
  .arrow-up {
    font-size: 18px;
    font-weight: 900;
    line-height: 1;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    margin-bottom: -2px;
  }
  
  /* Barre verticale sous la flèche */
  .bar {
    width: 2px;
    height: 14px;
    background: currentColor;
    border-radius: 1px;
    opacity: 0.9;
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.1);
  }
  
  /* État VISIBLE */
  .back-to-top-btn.visible {
    opacity: 1;
    visibility: visible;
    transform: translateY(0) scale(1);
  }
  
  /* Hover */
  .back-to-top-btn:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow:
      0 8px 25px rgba(var(--color-primary), 0.5),
      0 4px 15px rgba(var(--color-primary-hover), 0.4);
  }
  
  .back-to-top-btn:hover .arrow-up {
    transform: translateY(-1px);
  }
  
  .back-to-top-btn:hover .bar {
    transform: translateY(-1px);
    opacity: 1;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .back-to-top-btn {
      bottom: 1.5rem;
      right: 1.5rem;
      width: 50px;
      height: 50px;
      z-index: 9999;
      pointer-events: auto;
    }
    
    .arrow-up {
      font-size: 16px;
    }
    
    .bar {
      width: 2px;
      height: 12px;
    }
  }
  
  @media (max-width: 480px) {
    .back-to-top-btn {
      bottom: 1.25rem;
      right: 1.25rem;
      width: 48px;
      height: 48px;
      z-index: 9999;
      pointer-events: auto;
    }
    
    .arrow-up {
      font-size: 15px;
    }
    
    .bar {
      width: 2px;
      height: 11px;
    }
  }
  
  /* S'assurer que le bouton n'est pas masqué par d'autres éléments */
  @media (max-width: 768px) {
    .back-to-top-btn.visible {
      opacity: 1 !important;
      visibility: visible !important;
      pointer-events: auto !important;
    }
  }
</style>

<script is:inline>
  (function() {
    function initBackToTop() {
      const btn = document.getElementById('back-to-top-btn');
      if (!btn) return;
      
      // Seuil plus bas sur mobile pour une meilleure visibilité
      const THRESHOLD = window.innerWidth <= 768 ? 200 : 300;
      let ticking = false;
      
      function updateButton() {
        const scrollY = window.scrollY || window.pageYOffset || document.documentElement.scrollTop;
        
        if (scrollY > THRESHOLD) {
          btn.classList.add('visible');
        } else {
          btn.classList.remove('visible');
        }
        
        ticking = false;
      }
      
      function onScroll() {
        if (!ticking) {
          requestAnimationFrame(updateButton);
          ticking = true;
        }
      }
      
      function scrollToTop() {
        window.scrollTo({
          top: 0,
          behavior: 'smooth'
        });
      }
      
      // Events
      window.addEventListener('scroll', onScroll, { passive: true });
      btn.addEventListener('click', scrollToTop);
      
      // Init
      updateButton();
    }
    
    // Démarrage
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initBackToTop);
    } else {
      initBackToTop();
    }
  })();
</script>