---
export interface Props {
  lang: "en" | "fr";
}

const { lang } = Astro.props;

const content = {
  en: {
    copyright: "© 2025 Bérangère Gallais. All rights reserved.",
    services: "Services",
    offers: "Offers",
    portfolio: "Portfolio",
    contact: "Contact",
    legal: "Legal Notice",
    privacy: "Privacy Policy",
  },
  fr: {
    copyright: "© 2025 Bérangère Gallais. Tous droits réservés.",
    services: "Services",
    offers: "Offres",
    portfolio: "Portfolio",
    contact: "Contact",
    legal: "Mentions légales",
    privacy: "Politique de confidentialité",
  },
};

const text = content[lang];
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-links">
        <a href={`/${lang}/services`}>{text.services}</a>
        <a href={lang === "fr" ? `/${lang}/offres` : `/${lang}/offers`}>{text.offers}</a>
        <a href={`/${lang}/portfolio`}>{text.portfolio}</a>
        <a href={`/${lang}/contact`}>{text.contact}</a>
        <a href={`/${lang}/legal-notice`}>{text.legal}</a>
        <a href={`/${lang}/privacy-policy`}>{text.privacy}</a>
      </div>
      <p class="copyright">{text.copyright}</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    padding: 3rem 0 2rem;
    background: rgb(var(--color-surface) / 0.3);
    border-top: 1px solid rgb(var(--color-border) / 0.2);
  }

  .footer-content {
    text-align: center;
  }

  .footer-links {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .footer-links a {
    color: rgb(var(--color-text-muted));
    text-decoration: none;
    font-size: 0.9rem;
    transition: color var(--transition-fast);
  }

  .footer-links a:hover {
    color: rgb(var(--color-primary));
  }

  .copyright {
    color: rgb(var(--color-text-muted));
    margin: 0;
    font-size: 0.8rem;
  }

  @media (max-width: 768px) {
    .footer-links {
      flex-direction: column;
      gap: 0.8rem;
    }
  }
</style>
