---
export interface Props {
  lang: 'en' | 'fr';
}

const { lang } = Astro.props;

const content = {
  en: {
    copyright: "© 2025 Bérangère Gallais. All rights reserved.",
    services: "Services",
    portfolio: "Portfolio", 
    contact: "Contact"
  },
  fr: {
    copyright: "© 2025 Bérangère Gallais. Tous droits réservés.",
    services: "Services",
    portfolio: "Portfolio",
    contact: "Contact"
  }
};

const text = content[lang];
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-links">
        <a href={`/${lang}/services`}>{text.services}</a>
        <a href={`/${lang}/portfolio`}>{text.portfolio}</a>
        <a href={`/${lang}/contact`}>{text.contact}</a>
      </div>
      <p class="copyright">{text.copyright}</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    padding: 3rem 0 2rem;
    background: rgb(var(--color-surface) / 0.3);
    border-top: 1px solid rgb(var(--color-border) / 0.2);
    margin-top: auto;
  }
  
  .footer-content {
    text-align: center;
  }
  
  .footer-links {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 1.5rem;
  }
  
  .footer-links a {
    color: rgb(var(--color-text-muted));
    text-decoration: none;
    transition: color var(--transition-fast);
  }
  
  .footer-links a:hover {
    color: rgb(var(--color-primary));
  }
  
  .copyright {
    color: rgb(var(--color-text-muted));
    margin: 0;
    font-size: 0.875rem;
  }

  @media (max-width: 768px) {
    .footer-links {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>