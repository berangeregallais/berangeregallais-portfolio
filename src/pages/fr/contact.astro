<style>
  /* ========== HERO ========== */
  .contact-hero {
    padding: 4.5rem 0 2.25rem; /* + air haut/bas */
    text-align: center;
  }
  .title {
    font-size: 2.125rem;
    line-height: 1.2;
    margin: 0 0 2.25rem; /* espace sous le titre */
  }
  .lead {
    font-size: 1.125rem;
    color: rgb(var(--color-text));
    line-height: 1.7; /* + lisible */
    margin: 0;
  }

  /* ========== SECTION CONTACT ========== */
  .contact-info {
    padding: 2.5rem 0 3.5rem; /* + air global */
    text-align: center;
  }
  .contact-info h2 {
    margin: 0 0 2rem;
    font-size: 1.6rem;
    font-weight: 600;
    color: rgb(var(--color-text));
  }
  .contact-info p {
    margin: 0.35rem 0;
  }

  /* Grille plus respirante */
  .contact-methods {
    display: grid;
    gap: 2.25rem; /* + espacement vertical/horizontal */
    margin-top: 2.25rem;
  }
  @media (min-width: 768px) {
    .contact-methods {
      grid-template-columns: repeat(2, 1fr);
      gap: 2.5rem; /* + air en desktop */
    }
  }

  /* Cartes de contact plus g√©n√©reuses */
  .contact-method {
    display: flex;
    align-items: center;
    gap: 1.125rem;
    padding: 1.5rem; /* + padding */
    background: rgb(var(--color-surface) / 1);
    border: 1px solid rgb(var(--color-border) / 0.4);
    border-radius: var(--radius-lg);
    transition:
      transform var(--transition-fast),
      box-shadow var(--transition-fast),
      border-color var(--transition-fast);
  }
  .contact-method:hover {
    transform: translateY(-3px);
    box-shadow: 0 14px 28px rgb(var(--color-shadow) / 0.12);
    border-color: rgb(var(--color-primary) / 0.35);
  }

  /* Ic√¥ne plus grande, plus douce */
  .contact-icon {
    font-size: 1.85rem;
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(
      135deg,
      rgb(var(--color-primary) / 0.9),
      rgb(var(--color-secondary) / 0.9)
    );
    color: #fff;
    border-radius: 50%;
    flex-shrink: 0;
  }

  /* D√©tails plus lisibles */
  .contact-details {
    flex: 1;
    text-align: left;
  }
  .contact-details strong {
    display: block;
    margin: 0 0 0.5rem; /* + air sous le label */
    color: rgb(var(--color-text));
    font-size: 1rem;
    font-weight: 700;
    line-height: 1.3;
  }
  .contact-details a,
  .contact-details span {
    font-size: 1rem;
    line-height: 1.6;
    color: rgb(var(--color-text-muted));
  }

  /* Liens pro et sobres */
  .contact-details a {
    color: rgb(var(--color-primary));
    text-decoration: none;
    font-weight: 500;
    transition:
      opacity var(--transition-fast),
      color var(--transition-fast);
  }
  .contact-details a:hover {
    opacity: 0.9;
    color: rgb(var(--color-primary));
  }

  /* Effet texte d√©grad√© Calendly conserv√© */
  .calendly-link {
    font-weight: 600;
    background: linear-gradient(
      135deg,
      rgb(var(--color-primary)),
      rgb(var(--color-secondary))
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* ========== INLINE CALENDLY (si utilis√© plus bas dans la page) ========== */
  .calendly-inline-widget {
    height: 720px;
    min-width: 320px;
  }
  @media (max-width: 480px) {
    .calendly-inline-widget {
      height: 820px;
    } /* + hauteur sur mobile */
  }

  /* ========== PETITS AJUSTEMENTS RESPONSIVE ========== */
  @media (max-width: 768px) {
    .title {
      font-size: 1.9rem;
      margin-bottom: 2rem;
    }
    .contact-method {
      padding: 1.25rem; /* un peu moins serr√© en petit √©cran */
    }
    .contact-icon {
      width: 56px;
      height: 56px;
      font-size: 1.7rem;
    }
  }

  /* ========== MODE CLAIR/ SOMBRE (contrastes l√©gers) ========== */
  :root[data-theme="dark"] .contact-method {
    background: rgb(var(--color-surface) / 0.75);
    border-color: rgb(var(--color-border) / 0.25);
  }
  :root[data-theme="dark"] .contact-details a,
  :root[data-theme="dark"] .contact-details span {
    color: rgb(var(--color-text)); /* + contraste en dark */
  }

  /* Fix mobile: cartes coll√©es √† droite */
  @media (max-width: 768px) {
    .contact-info .container {
      padding-left: 1rem;
      padding-right: 1rem; /* ajoute un vrai gutter mobile */
    }

    .contact-methods {
      grid-template-columns: 1fr; /* s√©curit√© : une seule colonne */
      justify-items: stretch; /* √©tire la carte sur toute la ligne */
    }

    .contact-method {
      width: 100%;
      box-sizing: border-box; /* √©vite tout d√©bordement horizontal */
      margin: 0; /* pas de marge parasite */
    }
  }

  /* Bonus robustesse : √©vite que les liens tr√®s longs d√©bordent */
  .contact-details a {
    word-break: break-word;
    overflow-wrap: anywhere;
  }

  /* Liens en rose uniquement en dark mode */
  :root[data-theme="dark"] a,
  :root[data-theme="dark"] .contact-details a {
    color: #e6b7d4;
  }

  :root[data-theme="dark"] a:hover,
  :root[data-theme="dark"] .contact-details a:hover {
    opacity: 0.85; /* petit effet au hover */
  }
</style>
