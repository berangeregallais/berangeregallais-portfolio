---
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout
  title="Contact ‚Äî B√©rang√®re Gallais"
  description="Contact me for your technical documentation, API and AI projects."
>
  <section class="contact-hero">
    <div class="container">
      <h1 class="title">Contact</h1>
      <p class="lead">
        Need technical documentation, AI compliance, or ghostwritten content?<br />
        Share your challenge with me, and I'll provide my recommendations.
      </p>
    </div>
  </section>

  <section class="contact-form">
    <div class="container">
      <form
        class="form"
        method="POST"
        action="/contact-success"
        name="contact-en"
        data-netlify="true"
        data-netlify-honeypot="bot-field"
      >
        <input type="hidden" name="form-name" value="contact-en" />
        <p class="hidden" hidden>
          <label>Don't fill this out: <input name="bot-field" /></label>
        </p>

        <div class="form-grid">
          <div class="form-field">
            <label for="name"
              >Name <span aria-hidden="true" class="req">*</span></label
            >
            <input type="text" id="name" name="name" required />
          </div>

          <div class="form-field">
            <label for="email"
              >Email <span aria-hidden="true" class="req">*</span></label
            >
            <input type="email" id="email" name="email" required />
          </div>

          <div class="form-field form-field--full">
            <label for="message"
              >Message <span aria-hidden="true" class="req">*</span></label
            >
            <textarea id="message" name="message" rows="6" required></textarea>
          </div>
        </div>

        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Send</button>
        </div>
      </form>

      <div class="contact-info">
        <h2>Or contact me directly</h2>
        <div class="contact-methods">
          <div class="contact-method">
            <div class="contact-icon">‚úâÔ∏è</div>
            <div class="contact-details">
              <strong>Email</strong>
              <a href="mailto:contact@berangeregallais.com"
                >contact@berangeregallais.com</a
              >
            </div>
          </div>
          <div class="contact-method">
            <div class="contact-icon">üìÖ</div>
            <div class="contact-details">
              <strong>Consultation</strong>
              <a
                href="https://calendly.com/gallaisberangere/discovery-call"
                target="_blank"
                rel="noopener"
                class="calendly-link"
              >
                Book a call
              </a>
            </div>
          </div>
          <div class="contact-method">
            <div class="contact-icon">üíº</div>
            <div class="contact-details">
              <strong>LinkedIn</strong>
              <a
                href="https://www.linkedin.com/in/berangeregallais"
                target="_blank"
                rel="noopener"
              >
                View my profile
              </a>
            </div>
          </div>
          <div class="contact-method">
            <div class="contact-icon">üì±</div>
            <div class="contact-details">
              <strong>Response</strong>
              <span>Within 24h on weekdays</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <style>
    .contact-hero {
      padding: 3rem 0 1.5rem;
      text-align: center;
    }
    .title {
      font-size: 2rem;
      margin-bottom: 3rem;
    } /* + espace sous le titre */
    .lead {
      font-size: 1.1rem;
      color: rgb(var(--color-text));
      line-height: 1.6;
    }

    .contact-form {
      padding: 2rem 0 3rem;
    }
    .form {
      max-width: 760px;
      margin: 0 auto;
    }
    .form-grid {
      display: grid;
      gap: 1rem;
    }
    @media (min-width: 720px) {
      .form-grid {
        grid-template-columns: 1fr 1fr;
      }
      .form-field--full {
        grid-column: 1 / -1;
      }
    }
    .form-field {
      display: flex;
      flex-direction: column;
      gap: 0.4rem;
    }
    label {
      font-weight: 600;
    }
    .req {
      color: rgb(var(--color-secondary));
      margin-left: 0.2rem;
    }

    input,
    textarea {
      width: 100%;
      padding: 0.75rem 0.9rem;
      border: 1px solid rgb(var(--color-border));
      border-radius: 10px;
      background: rgb(var(--color-background));
      color: rgb(var(--color-text));
      font: inherit;
      transition:
        border-color var(--transition-fast),
        box-shadow var(--transition-fast);
    }
    input:focus,
    textarea:focus {
      outline: none;
      border-color: rgb(var(--color-primary));
      box-shadow: 0 0 0 3px rgb(var(--color-primary) / 0.25);
    }
    textarea {
      resize: vertical;
      min-height: 160px;
    }

    .form-actions {
      margin-top: 1rem;
      display: flex;
      justify-content: flex-end;
    }
    .hidden {
      display: none;
    }

    .contact-info {
      margin-top: 2.5rem;
      text-align: center;
    }
    .contact-info h2 {
      margin-bottom: 1rem;
    }
    .contact-info p {
      margin: 0.3rem 0;
    }

    .contact-methods {
      display: grid;
      gap: 1.5rem;
      margin-top: 2rem;
    }

    @media (min-width: 768px) {
      .contact-methods {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    .contact-method {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding: 1rem;
      background: rgb(var(--color-surface));
      border-radius: var(--radius-lg);
      transition: transform var(--transition-fast);
    }

    .contact-method:hover {
      transform: translateY(-2px);
    }

    .contact-icon {
      font-size: 1.5rem;
      width: 50px;
      height: 50px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, rgb(var(--color-primary)), rgb(var(--color-secondary)));
      border-radius: 50%;
    }

    .contact-details {
      flex: 1;
      text-align: left;
    }

    .contact-details strong {
      display: block;
      margin-bottom: 0.25rem;
      color: rgb(var(--color-text));
    }

    .contact-details a {
      color: rgb(var(--color-primary));
      text-decoration: none;
      transition: opacity var(--transition-fast);
    }

    .contact-details a:hover {
      opacity: 0.8;
    }

    .calendly-link {
      font-weight: 600;
      background: linear-gradient(135deg, rgb(var(--color-primary)), rgb(var(--color-secondary)));
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
  </style>
</BaseLayout>