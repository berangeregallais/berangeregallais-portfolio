---
import BaseLayout from "../../layouts/BaseLayout.astro";
---

<BaseLayout
  title="Contact ‚Äî B√©rang√®re Gallais"
  description="Contact me for your technical documentation, API and AI projects."
>
  <section class="contact-hero">
    <div class="container">
      <h1 class="title">Contact</h1>
      <p class="lead">
        A technical documentation, AI compliance or ghostwriting project?<br />
        Share your challenge with me, I'll provide my expert recommendations.
      </p>
    </div>
  </section>

  <section class="contact-form">
    <div class="container">
      <form
        class="form"
        method="POST"
        action="/en/contact-success"
        name="contact-en"
        data-netlify="true"
        data-netlify-honeypot="bot-field"
      >
        <input type="hidden" name="form-name" value="contact-en" />
        <p class="hidden" hidden>
          <label>Don't fill this out: <input name="bot-field" /></label>
        </p>

        <div class="form-grid">
          <div class="form-field">
            <label for="name"
              >Name <span aria-hidden="true" class="req">*</span></label
            >
            <input type="text" id="name" name="name" required />
          </div>

          <div class="form-field">
            <label for="email"
              >Email <span aria-hidden="true" class="req">*</span></label
            >
            <input type="email" id="email" name="email" required />
          </div>

          <div class="form-field form-field--full">
            <label for="message"
              >Message <span aria-hidden="true" class="req">*</span></label
            >
            <textarea id="message" name="message" rows="6" required></textarea>
          </div>
        </div>

        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Send</button>
        </div>
      </form>

      <div class="contact-info">
        <h2>Or contact me directly</h2>
        <p>
          ‚úâÔ∏è <a href="mailto:contact@berangeregallais.com"
            >contact@berangeregallais.com</a
          >
        </p>
        <p>
          üíº <a
            href="https://www.linkedin.com/in/berangeregallais"
            target="_blank"
            rel="noopener"
          >
            LinkedIn
          </a>
        </p>
        <p>
          üì± Response within 24h on weekdays
        </p>
      </div>
    </div>
  </section>

  <style>
    .contact-hero {
      padding: 3rem 0 1.5rem;
      text-align: center;
    }
    .title {
      font-size: 2rem;
      margin-bottom: 3rem;
    } /* + espace sous le titre */
    .lead {
      font-size: 1.1rem;
      color: rgb(var(--color-text));
      line-height: 1.6;
    }

    .contact-form {
      padding: 2rem 0 3rem;
    }
    .form {
      max-width: 760px;
      margin: 0 auto;
    }
    .form-grid {
      display: grid;
      gap: 1rem;
    }
    @media (min-width: 720px) {
      .form-grid {
        grid-template-columns: 1fr 1fr;
      }
      .form-field--full {
        grid-column: 1 / -1;
      }
    }
    .form-field {
      display: flex;
      flex-direction: column;
      gap: 0.4rem;
    }
    label {
      font-weight: 600;
    }
    .req {
      color: rgb(var(--color-secondary));
      margin-left: 0.2rem;
    }

    input,
    textarea {
      width: 100%;
      padding: 0.75rem 0.9rem;
      border: 1px solid rgb(var(--color-border));
      border-radius: 10px;
      background: rgb(var(--color-background));
      color: rgb(var(--color-text));
      font: inherit;
      transition:
        border-color var(--transition-fast),
        box-shadow var(--transition-fast);
    }
    input:focus,
    textarea:focus {
      outline: none;
      border-color: rgb(var(--color-primary));
      box-shadow: 0 0 0 3px rgb(var(--color-primary) / 0.25);
    }
    textarea {
      resize: vertical;
      min-height: 160px;
    }

    .form-actions {
      margin-top: 1rem;
      display: flex;
      justify-content: flex-end;
    }
    .hidden {
      display: none;
    }

    .contact-info {
      margin-top: 2.5rem;
      text-align: center;
    }
    .contact-info h2 {
      margin-bottom: 1rem;
    }
    .contact-info p {
      margin: 0.3rem 0;
    }
  </style>
</BaseLayout>