    color: rgb(var(--color-text-muted));
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .service-card-features {
    list-style: none;
    padding: 0;
    margin: 0 0 1.5rem 0;
    flex-grow: 1;
  }

  .service-card-features li {
