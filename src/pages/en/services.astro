<style>
  /* Hero */
  .services-hero {
    padding: 8rem 0 6rem;
    text-align: center;
    background: linear-gradient(
      135deg,
      rgb(var(--color-background)) 0%,
      rgba(var(--color-primary), 0.05) 100%
    );
    position: relative;
    overflow: hidden;
  }

  .services-hero::before {
    content: "";
    position: absolute;
    inset: 0;
    background: radial-gradient(
        circle at 20% 80%,
        rgba(var(--color-primary), 0.08) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle at 80% 20%,
        rgba(var(--color-accent), 0.05) 0%,
        transparent 50%
      );
    pointer-events: none;
  }

  .services-hero h1 {
    font-family: var(--font-hero);
    font-size: clamp(2.5rem, 5vw, 4rem);
    margin-bottom: 1.5rem;
    color: rgb(var(--color-text));
    position: relative;
    z-index: 1;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: rgb(var(--color-text-muted));
    max-width: 700px;
    margin: 0 auto 2rem;
    line-height: 1.6;
    position: relative;
    z-index: 1;
  }

  .hero-cta {
    margin-top: 2rem;
    position: relative;
    z-index: 1;
  }

  /* Services Cards Section */
