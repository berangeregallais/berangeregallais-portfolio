  }
  .cta-row {
    display: flex;
    gap: 0.75rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 1rem;
  }

  .cta-benefits {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin: 2rem 0;
    flex-wrap: wrap;
  }

  .benefit {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    color: rgb(var(--color-text-muted));
  }

  .benefit-icon {
    font-size: 1.2rem;
  }

  @media (max-width: 768px) {
    .cta-benefits {
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }
  }
</style>