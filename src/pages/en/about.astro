<style>
  .about-hero {
    padding: 3rem 0 1rem;
  }
  .about-hero__grid {
    display: grid;
    gap: 2rem;
    align-items: center;
  }
  @media (min-width: 900px) {
    .about-hero__grid {
      grid-template-columns: 1.2fr 0.8fr;
    }
  }
  .about-hero__text {
    margin-bottom: 1.5rem;
  }
  .title {
    font-size: 2rem;
    line-height: 1.2;
    margin: 0 0 0.75rem;
  }
  /* + espace autour des paragraphes/listes du hero */
  .lead {
    font-size: 1.1rem;
    color: rgb(var(--color-text));
    margin: 0 0 1.75rem;
    line-height: 1.7;
  }
  .bullets {
    margin: 0 0 2rem;
    padding-left: 1.2rem;
    line-height: 1.6;
  }
  .bullets li {
    margin-bottom: 0.6rem;
  }
  .about-hero .btn {
    margin-right: 0.5rem;
  }
  .about-portrait {
    width: 100%;
    height: auto;
    border-radius: 16px;
    box-shadow: 0 8px 30px rgb(0 0 0 / 0.06);
  }

  /* Section Parcours */
  .about-background {
    padding: 3rem 0 2rem;
    background: linear-gradient(
      135deg,
      rgb(var(--color-surface-variant) / 0.3) 0%,
      rgb(var(--color-primary) / 0.02) 100%
    );
  }
  .about-background h2 {
    text-align: center;
    margin-bottom: 2.5rem;
    font-family: var(--font-serif);
    font-size: 2.25rem;
    color: rgb(var(--color-text));
  }
  .background-grid {
    display: grid;
    gap: 2rem;
    margin-top: 2rem;
  }
  @media (min-width: 900px) {
    .background-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2.5rem;
    }
  }
  .bg-item {
    background: rgb(var(--color-surface) / 0.8);
    border: 1px solid rgb(var(--color-border) / 0.3);
    border-radius: 16px;
    padding: 2rem;
    text-align: center;
    backdrop-filter: blur(10px);
    transition: all var(--transition-normal);
  }
  .bg-item:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgb(var(--color-shadow) / 0.1);
    border-color: rgb(var(--color-primary) / 0.3);
  }
  .bg-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    display: block;
  }
  .bg-item h3 {
    margin: 0 0 1rem;
    font-size: 1.25rem;
    font-weight: 600;
    color: rgb(var(--color-text));
  }
  .bg-item p {
    margin: 0;
    line-height: 1.6;
    color: rgb(var(--color-text-muted));
  }

  /* Section Approche */
  .about-approach {
    padding: 3rem 0 2rem;
  }
  .about-approach h2 {
    text-align: center;
    margin-bottom: 1.5rem;
    font-family: var(--font-serif);
    font-size: 2.25rem;
    color: rgb(var(--color-text));
  }
  .section-intro {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 3rem;
    font-size: 1.1rem;
    line-height: 1.7;
    color: rgb(var(--color-text-muted));
  }
  .approach-grid {
    display: grid;
    gap: 2rem;
    margin-top: 2rem;
  }
  @media (min-width: 900px) {
    .approach-grid {
