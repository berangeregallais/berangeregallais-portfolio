    border-radius: 16px;
    padding: 2rem;
    text-align: center;
    backdrop-filter: blur(10px);
    transition: all var(--transition-normal);
  }
  .approach-item:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgb(var(--color-shadow) / 0.1);
    border-color: rgb(var(--color-primary) / 0.3);
  }
  .approach-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    display: block;
  }
  .approach-item h3 {
    margin: 0 0 1rem;
    font-size: 1.25rem;
    font-weight: 600;
    color: rgb(var(--color-text));
  }
  .approach-item p {
    margin: 0;
    line-height: 1.6;
    color: rgb(var(--color-text-muted));
