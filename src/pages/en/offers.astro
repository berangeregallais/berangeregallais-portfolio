    .offer-tagline {
      font-size: 1rem;
      color: rgb(var(--color-text-muted));
      margin-bottom: 1.5rem;
    }

    .offer-price {
      font-size: 2.5rem;
      font-weight: 700;
      color: rgb(var(--color-primary));
      margin-bottom: 0.5rem;
    }

    .offer-vat {
      font-size: 0.75rem;
      color: rgb(var(--color-text-muted));
      font-style: italic;
      margin-bottom: 1.5rem;
    }

    .offer-after-poc {
      font-size: 0.95rem;
      color: rgb(var(--color-success));
      margin-top: 0.5rem;
      font-weight: 600;
    }

    .offer-duration {
      font-size: 0.9rem;
      color: rgb(var(--color-text-muted));
      margin-bottom: 1.5rem;
    }

    .offer-value-prop {
      margin-bottom: 1.5rem;
      padding: 1rem;
      background: linear-gradient(
        135deg,
        rgba(var(--color-accent), 0.08),
        rgba(var(--color-primary), 0.08)
