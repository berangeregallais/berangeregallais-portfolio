    .upgrade-icon {
      font-size: 1.25rem;
    }

    .poc-cta {
      display: flex;
      align-items: center;
      flex-shrink: 0;
    }

    .poc-cta .btn {
      white-space: nowrap;
      padding: 0.65rem 0.85rem !important;
      font-size: 0.8rem !important;
    }

    /* ===============================
     OFFERS SECTION
     =============================== */
    .offers-section {
      padding: 4rem 0;
      background: rgba(var(--color-surface-variant), 0.5);
    }

    .offers-grid-hero {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
      margin-bottom: 3rem;
    }

    .offer-card {
