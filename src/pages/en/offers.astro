      border-radius: var(--radius-md);
      font-weight: 600;
      font-size: 0.875rem;
      white-space: nowrap;
    }

    .poc-info h3 {
      font-size: 1.5rem;
      margin: 0 0 0.25rem 0;
      color: rgb(var(--color-text));
    }

    .poc-tagline {
      margin: 0;
      font-size: 0.95rem;
      color: rgb(var(--color-text-muted));
    }

    .poc-price-block {
      text-align: right;
    }

    .poc-price {
      font-size: 2rem;
      font-weight: 700;
      color: rgb(var(--color-primary));
      margin: 0;
    }

    .poc-vat {
      margin: 0;
      font-size: 0.75rem;
      color: rgb(var(--color-text-muted));
      white-space: nowrap;
    }

    .poc-highlights {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 0.75rem;
      padding: 0.75rem;
      background: rgba(var(--color-surface), 0.5);
      border-radius: var(--radius-md);
    }

    .poc-highlight-item {
      font-size: 0.8rem;
      color: rgb(var(--color-text));
      white-space: nowrap;
    }

    .poc-upgrade-banner {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.875rem 1.25rem;
      background: linear-gradient(
        135deg,
        rgba(var(--color-success), 0.1),
        rgba(var(--color-primary), 0.1)
      );
      border-left: 3px solid rgb(var(--color-success));
      border-radius: var(--radius-md);
      font-size: 0.95rem;
      color: rgb(var(--color-text));
