---
// src/pages/en/offers.astro
import BaseLayout from "../../layouts/BaseLayout.astro";
import BackToTop from "../../components/BackToTop.astro";
---

<BaseLayout
    title="Offers & Pricing | AI Agents"
    description="3 production offers to develop your AI agent: Starter 7K‚Ç¨, Expert 14K‚Ç¨, Enterprise 19.5K‚Ç¨. Optional validation, custom projects, complete FAQ."
    lang="en"
>
    <!-- 1. HEADER -->
    <section class="hero-section">
        <div class="container">
            <h1>Offers & Pricing</h1>
            <p class="hero-subtitle">
                Three offers to develop your AI agent. 
                Choose the one that fits your needs.
            </p>
        </div>
    </section>

    <!-- 2. THREE MAIN OFFERS -->
    <section id="offers" class="offers-section">
        <div class="container">
            <div class="offers-grid">
                <!-- STARTER -->
                <div class="offer-card">
                    <div class="offer-badge">STARTER</div>
                    <div class="offer-price">‚Ç¨7,000</div>
                    <div class="offer-duration">3-4 weeks</div>
                    
                    <div class="offer-title-section">
                        <h3>Simple guided AI agent</h3>
                        <p class="offer-subtitle">Without document base</p>
                    </div>

                    <div class="offer-includes">
                        <h4>What's included:</h4>
                        <ul>
                            <li>Functional conversational agent</li>
                            <li>Integrated web interface</li>
                            <li>Reliability tests</li>
                            <li>User documentation</li>
                            <li>2 weeks of post-delivery support</li>
                        </ul>
                    </div>

                    <div class="offer-tech">
                        <small>+ Included: React, TypeScript, Serverless</small>
                    </div>

                    <div class="offer-example">
                        üí° <strong>Similar project:</strong> 
                        <a href="/en/portfolio/visionary-ai-agent" target="_blank" rel="noopener noreferrer">
                            Visionary AI Agent
                        </a>
                    </div>

                    <details class="offer-details">
                        <summary>View details</summary>
                        <div class="details-content">
                            <h5>Development process</h5>
                            <ol>
                                <li>Free exchange (30 min) to define the need</li>
                                <li>Agent development (3-4 weeks)</li>
                                <li>Testing and integration</li>
                                <li>Delivery + support (2 weeks)</li>
                            </ol>
                            
                            <h5>Technical deliverables</h5>
                            <ul>
                                <li>Complete source code (frontend + backend)</li>
                                <li>Technical documentation</li>
                                <li>Deployment guide</li>
                                <li>Unit tests</li>
                            </ul>

                            <h5>Terms</h5>
                            <ul>
                                <li>Staggered payment: 30% at start, 40% mid-way, 30% at delivery</li>
                                <li>You own the source code</li>
                                <li>Hosting and API at your expense (estimate provided)</li>
                            </ul>
                        </div>
                    </details>

                    <div class="offer-actions">
                        <a href="/en/contact" class="btn btn-outline">Discuss this offer</a>
                    </div>
                </div>

                <!-- EXPERT -->
                <div class="offer-card offer-card--featured">
                    <div class="offer-badge">EXPERT</div>
                    <div class="offer-price">‚Ç¨14,000</div>
                    <div class="offer-duration">6-7 weeks</div>
                    
                    <div class="offer-title-section">
                        <h3>Agent with document search</h3>
                        <p class="offer-subtitle">Automatically queries your documents</p>
                    </div>

                    <div class="offer-includes">
                        <h4>What's included:</h4>
                        <ul>
                            <li>Intelligent agent + semantic search</li>
                            <li>Connection to your documentation/FAQ</li>
                            <li>Advanced conversational interface</li>
                            <li>Automated tests + monitoring</li>
                            <li>3 weeks of post-delivery support</li>
                        </ul>
                    </div>

                    <div class="offer-tech">
                        <small>+ Included: Python, FastAPI, Next.js, LangGraph, Vector database</small>
                    </div>

                    <div class="offer-example">
                        üí° <strong>Similar project:</strong> 
                        <a href="/en/portfolio/neolens-support-agent" target="_blank" rel="noopener noreferrer">
                            Neolens Support Agent
                        </a>
                    </div>

                    <details class="offer-details">
                        <summary>View details</summary>
                        <div class="details-content">
                            <h5>Development process</h5>
                            <ol>
                                <li>Free exchange (30 min) to analyze your documentation</li>
                                <li>Document preparation and indexing</li>
                                <li>RAG agent development (6-7 weeks)</li>
                                <li>Testing and adjustments</li>
                                <li>Delivery + support (3 weeks)</li>
                            </ol>
                            
                            <h5>Technical deliverables</h5>
                            <ul>
                                <li>Complete RAG architecture (Python backend + FastAPI)</li>
                                <li>Next.js frontend with conversational interface</li>
                                <li>Vector database (FAISS, Pinecone or other)</li>
                                <li>Complete automated tests</li>
                                <li>Conversation monitoring and logs</li>
                                <li>Detailed technical documentation</li>
                            </ul>

                            <h5>Terms</h5>
                            <ul>
                                <li>Staggered payment: 30% at start, 40% mid-way, 30% at delivery</li>
                                <li>You own the source code</li>
                                <li>Hosting and API at your expense (estimate provided)</li>
                            </ul>
                        </div>
                    </details>

                    <div class="offer-actions">
                        <a href="/en/contact" class="btn btn-outline">Discuss this offer</a>
                    </div>
                </div>

                <!-- ENTERPRISE -->
                <div class="offer-card">
                    <div class="offer-badge">ENTERPRISE</div>
                    <div class="offer-price">‚Ç¨19,500</div>
                    <div class="offer-duration">7-9 weeks</div>
                    
                    <div class="offer-title-section">
                        <h3>Multilingual agent + third-party integrations</h3>
                        <p class="offer-subtitle">Connected to your ecosystem</p>
                    </div>

                    <div class="offer-includes">
                        <h4>What's included:</h4>
                        <ul>
                            <li>Everything in the Expert offer</li>
                            <li>Multi-sources (docs + CRM + databases)</li>
                            <li>2-3 integrations (Slack, Zendesk, APIs)</li>
                            <li>Support for 2-3 languages</li>
                            <li>1 month of post-delivery support</li>
                        </ul>
                    </div>

                    <div class="offer-tech">
                        <small>+ Included: Python, FastAPI, Next.js, CI/CD, Team training</small>
                    </div>

                    <div class="offer-example" style="min-height: 1.5rem;">
                        <!-- Space for alignment -->
                    </div>

                    <details class="offer-details">
                        <summary>View details</summary>
                        <div class="details-content">
                            <h5>Development process</h5>
                            <ol>
                                <li>Free exchange (30 min) to define integrations</li>
                                <li>Multi-source and multilingual architecture</li>
                                <li>Development with integrations (7-9 weeks)</li>
                                <li>Integration testing and multilingual validation</li>
                                <li>Team training</li>
                                <li>Delivery + support (1 month)</li>
                            </ol>
                            
                            <h5>Technical deliverables</h5>
                            <ul>
                                <li>Complete architecture with all integrations</li>
                                <li>Automated CI/CD pipeline</li>
                                <li>Multilingual management (detection + translation)</li>
                                <li>Complete technical documentation</li>
                                <li>Team training (dedicated session)</li>
                            </ul>

                            <h5>Terms</h5>
                            <ul>
                                <li>Staggered payment: 30% at start, 40% mid-way, 30% at delivery</li>
                                <li>You own the source code</li>
                                <li>Hosting and API at your expense (estimate provided)</li>
                            </ul>
                        </div>
                    </details>

                    <div class="offer-actions">
                        <a href="/en/contact" class="btn btn-outline">Discuss this offer</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- 3. COMPARISON TABLE -->
    <section class="comparison-section">
        <div class="container">
            <h2 class="section-title">Offer comparison</h2>
            
            <div class="comparison-table-wrapper">
                <table class="comparison-table">
                    <thead>
                        <tr>
                            <th class="feature-column">Feature</th>
                            <th>Starter</th>
                            <th>Expert</th>
                            <th>Enterprise</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="feature-name">Price</td>
                            <td>‚Ç¨7,000</td>
                            <td>‚Ç¨14,000</td>
                            <td>‚Ç¨19,500</td>
                        </tr>
                        <tr>
                            <td class="feature-name">Approximate timeline</td>
                            <td>3-4 weeks</td>
                            <td>6-7 weeks</td>
                            <td>7-9 weeks</td>
                        </tr>
                        <tr>
                            <td class="feature-name">Document base</td>
                            <td>‚ùå No</td>
                            <td>‚úÖ Yes</td>
                            <td>‚úÖ Multi-sources</td>
                        </tr>
                        <tr>
                            <td class="feature-name">Third-party integrations</td>
                            <td>‚ùå No</td>
                            <td>‚ùå No</td>
                            <td>‚úÖ Yes (2-3)</td>
                        </tr>
                        <tr>
                            <td class="feature-name">Multilingual</td>
                            <td>‚ùå No</td>
                            <td>‚ùå No</td>
                            <td>‚úÖ Yes (2-3 languages)</td>
                        </tr>
                        <tr>
                            <td class="feature-name">Automated tests</td>
                            <td>Basic</td>
                            <td>‚úÖ Complete</td>
                            <td>‚úÖ Complete</td>
                        </tr>
                        <tr>
                            <td class="feature-name">Monitoring</td>
                            <td>‚ùå No</td>
                            <td>‚úÖ Yes</td>
                            <td>‚úÖ Yes</td>
                        </tr>
                        <tr>
                            <td class="feature-name">CI/CD</td>
                            <td>‚ùå No</td>
                            <td>‚ùå No</td>
                            <td>‚úÖ Yes</td>
                        </tr>
                        <tr>
                            <td class="feature-name">Post-delivery support</td>
                            <td>2 weeks</td>
                            <td>3 weeks</td>
                            <td>1 month</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <!-- 4. "HESITATING?" BLOCK -->
    <section class="hesitation-section">
        <div class="container">
            <div class="hesitation-card">
                <h2>Hesitating between several offers?</h2>
                <p class="hesitation-subtitle">
                    Or not sure if AI will work for your case?
                </p>

                <div class="hesitation-options">
                    <div class="hesitation-option">
                        <strong>‚Üí Strategic audit & feasibility ‚Äî ‚Ç¨2,000</strong>
                        <p>I'll tell you if it's worth it.</p>
                    </div>
                    <div class="hesitation-option">
                        <strong>‚Üí Functional MVP ‚Äî ‚Ç¨5,000</strong>
                        <p>You test before investing 7-20K.</p>
                    </div>
                </div>

                <div class="hesitation-bonus">
                    üí° <strong>The ‚Ç¨2,000 audit fee is deducted from the final price</strong> if you proceed to production.
                </div>
            </div>
        </div>
    </section>

    <!-- 5. FAQ -->
    <section id="faq" class="faq-section">
        <div class="container">
            <h2 class="section-title">Frequently asked questions</h2>
            
            <div class="faq-list">
                <details class="faq-item">
                    <summary>Why offer optional validation?</summary>
                    <p>
                        To avoid spending ‚Ç¨7,000 to ‚Ç¨20,000 on a project that won't work. 
                        The audit tests whether AI correctly answers your business questions with 
                        your real data. You receive an honest Go/No-Go recommendation + a 
                        precise estimate. If it's "No-Go", you'll have invested ‚Ç¨2,000 for an 
                        informed decision rather than the full budget.
                    </p>
                </details>

                <details class="faq-item">
                    <summary>Do the prices include hosting and APIs?</summary>
                    <p>
                        No, hosting and API costs (OpenAI, Anthropic, etc.) are at your expense. 
                        I provide a detailed estimate of monthly costs (generally ‚Ç¨50-300/month 
                        depending on usage) and help you optimize these costs.
                    </p>
                </details>

                <details class="faq-item">
                    <summary>Can I pay in installments?</summary>
                    <p>
                        Yes! Payment in 3 installments: 30% at start, 40% mid-way, 30% at delivery.
                    </p>
                </details>

                <details class="faq-item">
                    <summary>What happens after delivery?</summary>
                    <p>
                        You receive all source code, complete documentation, and post-launch support 
                        (duration according to offer: 2 weeks to 1 month). After that, you're 
                        autonomous or you can subscribe to monthly maintenance (<span style="white-space: nowrap;">‚Ç¨1,500/month</span>).
                    </p>
                </details>

                <details class="faq-item">
                    <summary>Can I modify the agent after delivery?</summary>
                    <p>
                        Absolutely! You own the code. You can modify it yourself (technical 
                        documentation provided), ask me for evolutions (hourly rate or fixed price), 
                        or have another developer work on it.
                    </p>
                </details>
            </div>
        </div>
    </section>

    <!-- 6. MULTI-AGENT PLATFORM -->
    <section class="custom-section">
        <div class="container">
            <h2 class="section-title">Multi-agent platform</h2>
            <p class="custom-intro">
                To orchestrate multiple agents collaborating in your organization, or for very specific needs.
            </p>
            <div class="custom-cta">
                <a href="/en/contact" class="btn btn-outline">Discuss my custom project</a>
            </div>
        </div>
    </section>

    <!-- 7. OTHER SERVICES -->
    <section class="other-services-section">
        <div class="container">
            <div class="services-grid">
                <div class="service-card">
                    <h3>Existing agent audit</h3>
                    <div class="service-price">‚Ç¨1,500 ¬∑ 1 week</div>
                    <p class="service-description">
                        Your agent isn't working as expected?
                    </p>
                    <a href="/en/contact" class="btn btn-outline">Request an audit</a>
                </div>

                <div class="service-card">
                    <h3>Maintenance</h3>
                    <div class="service-price">From ‚Ç¨1,500/month</div>
                    <p class="service-description">
                        After delivery of your agent
                    </p>
                    <a href="/en/contact" class="btn btn-outline">Get a quote</a>
                </div>
            </div>
        </div>
    </section>

    <!-- 8. FINAL CTA -->
    <section class="cta-section">
        <div class="container">
            <p class="cta-text">Have a question?</p>
            <a href="/en/contact" class="cta-link">Schedule a meeting</a>
        </div>
    </section>

    <BackToTop />
</BaseLayout>

<style>
    /* ===============================
       HERO SECTION
       =============================== */
    .hero-section {
        padding: 6rem 0 4rem;
        text-align: center;
    }

    .hero-section h1 {
        font-size: clamp(2.5rem, 5vw, 3.5rem);
        margin-bottom: 1.5rem;
        color: rgb(var(--color-text));
    }

    .hero-subtitle {
        font-size: clamp(1.125rem, 2vw, 1.25rem);
        color: rgb(var(--color-text-muted));
        max-width: 700px;
        margin: 0 auto;
        line-height: 1.7;
    }

    /* ===============================
       OFFERS SECTION
       =============================== */
    .offers-section {
        padding: 5rem 0;
    }

    .offers-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 1.5rem;
        max-width: 1400px;
        margin: 0 auto;
        align-items: stretch;
    }

    .offer-card {
        background: rgb(var(--color-surface));
        border: 1px solid rgba(var(--color-border), 0.3);
        border-radius: var(--radius-lg);
        padding: 2rem;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        text-align: left;
        line-height: 1.7;
        height: 100%;
    }

    .offer-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 25px rgba(var(--color-primary), 0.15);
    }

    .offer-card--featured {
        border: 2px solid rgba(var(--color-primary), 0.4);
        background: linear-gradient(
            135deg,
            rgba(var(--color-primary), 0.05),
            rgba(var(--color-surface), 0.8)
        );
    }

    .offer-badge {
        display: inline-block;
        background: rgba(var(--color-primary), 0.1);
        color: rgb(var(--color-primary));
        padding: 0.5rem 1rem;
        border-radius: var(--radius-md);
        font-size: 0.875rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        width: fit-content;
    }

    .offer-price {
        font-size: 2.5rem;
        font-weight: 700;
        color: rgb(var(--color-primary));
        margin: 0.5rem 0;
        line-height: 1.2;
        white-space: nowrap;
    }

    .offer-duration {
        color: rgb(var(--color-text-muted));
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .offer-title-section h3 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
        color: rgb(var(--color-text));
        line-height: 1.3;
    }

    .offer-subtitle {
        color: rgb(var(--color-text-muted));
        font-size: 0.95rem;
        margin: 0;
        line-height: 1.6;
    }

    .offer-includes {
        margin-top: 0.5rem;
        flex: 1;
    }

    .offer-includes h4 {
        font-size: 1rem;
        margin-bottom: 0.75rem;
        color: rgb(var(--color-text));
        font-weight: 600;
    }

    .offer-includes ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .offer-includes ul li {
        padding-left: 1.5rem;
        margin-bottom: 0.5rem;
        position: relative;
        color: rgb(var(--color-text-muted));
        font-size: 0.95rem;
        line-height: 1.6;
    }

    .offer-includes ul li::before {
        content: "‚úì";
        position: absolute;
        left: 0;
        color: rgb(var(--color-success));
        font-weight: 600;
    }

    .offer-tech {
        margin-top: 0.5rem;
    }

    .offer-tech small {
        color: rgb(var(--color-text-muted));
        font-size: 0.85rem;
        opacity: 0.8;
    }

    .offer-example {
        font-size: 0.9rem;
        color: rgb(var(--color-text-muted));
        line-height: 1.6;
        margin-top: auto;
        min-height: 1.5rem;
    }

    .offer-example a {
        color: rgb(var(--color-primary));
        text-decoration: underline;
    }

    .offer-details {
        margin-top: 0.5rem;
    }

    .offer-details summary {
        cursor: pointer;
        color: rgb(var(--color-primary));
        font-weight: 600;
        font-size: 0.95rem;
        padding: 0.75rem;
        background: rgba(var(--color-primary), 0.05);
        border-radius: var(--radius-md);
        transition: background 0.2s ease;
    }

    .offer-details summary:hover {
        background: rgba(var(--color-primary), 0.1);
    }

    .details-content {
        margin-top: 1rem;
        padding: 1.5rem;
        background: rgba(var(--color-surface-variant), 0.2);
        border-radius: var(--radius-md);
        line-height: 1.7;
    }

    .details-content h5 {
        font-size: 1rem;
        margin-top: 1.5rem;
        margin-bottom: 0.75rem;
        color: rgb(var(--color-text));
        font-weight: 600;
    }

    .details-content h5:first-child {
        margin-top: 0;
    }

    .details-content ol,
    .details-content ul {
        margin: 0.5rem 0;
        padding-left: 1.5rem;
        color: rgb(var(--color-text-muted));
    }

    .details-content li {
        margin-bottom: 0.5rem;
        line-height: 1.7;
    }

    .offer-actions {
        margin-top: 0;
        padding-top: 0;
    }

    .btn-outline {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        border: 2px solid rgba(var(--color-border), 0.5);
        border-radius: var(--radius-md);
        color: rgb(var(--color-text));
        text-decoration: none;
        font-weight: 500;
        transition: all 0.2s ease;
        background: transparent;
        width: 100%;
        text-align: center;
    }

    .btn-outline:hover {
        border-color: rgb(var(--color-primary));
        color: rgb(var(--color-primary));
        background: rgba(var(--color-primary), 0.05);
    }

    /* ===============================
       COMPARISON SECTION
       =============================== */
    .comparison-section {
        padding: 5rem 0;
        background: rgba(var(--color-surface-variant), 0.1);
    }

    .section-title {
        text-align: center;
        font-size: clamp(2rem, 4vw, 2.5rem);
        margin-bottom: 3rem;
        color: rgb(var(--color-text));
    }

    .comparison-table-wrapper {
        overflow-x: auto;
        max-width: 1200px;
        margin: 0 auto;
    }

    .comparison-table {
        width: 100%;
        border-collapse: collapse;
        background: rgb(var(--color-surface));
        border-radius: var(--radius-lg);
        overflow: hidden;
    }

    .comparison-table thead {
        background: rgba(var(--color-primary), 0.1);
    }

    .comparison-table th {
        padding: 1.25rem 1rem;
        text-align: left;
        font-weight: 600;
        color: rgb(var(--color-text));
        border-bottom: 2px solid rgba(var(--color-border), 0.3);
    }

    .comparison-table td {
        padding: 1rem;
        border-bottom: 1px solid rgba(var(--color-border), 0.2);
        color: rgb(var(--color-text-muted));
    }

    .comparison-table tbody tr:first-child td {
        white-space: nowrap;
    }

    .feature-name {
        font-weight: 600;
        color: rgb(var(--color-text)) !important;
    }

    .comparison-table tr:last-child td {
        border-bottom: none;
    }

    /* ===============================
       HESITATION SECTION
       =============================== */
    .hesitation-section {
        padding: 5rem 0;
    }

    .hesitation-card {
        background: rgba(var(--color-surface-variant), 0.3);
        border: 1px solid rgba(var(--color-border), 0.3);
        border-radius: var(--radius-lg);
        padding: 2rem;
        max-width: 800px;
        margin: 0 auto;
        text-align: center;
    }

    .hesitation-card h2 {
        font-size: 1.75rem;
        margin-bottom: 0.75rem;
        color: rgb(var(--color-text));
    }

    .hesitation-subtitle {
        color: rgb(var(--color-text-muted));
        margin-bottom: 2rem;
        font-size: 1.125rem;
    }

    .hesitation-options {
        margin-bottom: 1.5rem;
        text-align: left;
    }

    .hesitation-option {
        margin-bottom: 1rem;
        padding: 1rem;
        background: rgba(var(--color-surface), 0.5);
        border-radius: var(--radius-md);
    }

    .hesitation-option strong {
        color: rgb(var(--color-text));
        display: block;
        margin-bottom: 0.5rem;
        white-space: nowrap;
    }

    .hesitation-option p {
        color: rgb(var(--color-text-muted));
        margin: 0;
        font-size: 0.95rem;
    }

    .hesitation-bonus {
        margin: 1.5rem 0;
        padding: 1rem;
        background: rgba(var(--color-primary), 0.05);
        border-radius: var(--radius-md);
        color: rgb(var(--color-text-muted));
    }

    .hesitation-bonus strong {
