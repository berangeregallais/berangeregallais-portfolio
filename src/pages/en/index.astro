  <style>
    /* ===============================
     COULEURS PERSONNALIS√âES POUR CETTE PAGE
     =============================== */
    :root {
      --color-background-custom: 5, 10, 48; /* #050a30 - Bleu fonc√© */
      --color-primary-custom: 238, 130, 255; /* #ee82ff - Rose moins satur√© */
      --color-primary-hover-custom: 245, 150, 255; /* #f596ff - Rose clair pour hover */
      --color-accent-custom: 240, 170, 255; /* #f0aaff - Rose doux pour accents */
    }

    /* Override des variables de couleur pour cette page */
    #en-index-root {
      --color-background: 5, 10, 48;
      --color-primary: 238, 130, 255;
      --color-primary-hover: 245, 150, 255;
      --color-accent: 240, 170, 255;
      --color-surface: 15, 25, 65;
      --color-surface-variant: 25, 40, 90;
    }

    /* ===============================
     HERO SECTION
     =============================== */
    .hero {
      padding: 8rem 0 6rem;
      background: linear-gradient(
        135deg,
        rgb(var(--color-background)) 0%,
        rgba(var(--color-primary), 0.05) 100%
      );
      position: relative;
      overflow: hidden;
    }

    .hero::before {
      content: "";
      position: absolute;
      inset: 0;
      background: radial-gradient(
          circle at 20% 80%,
          rgba(var(--color-primary), 0.08) 0%,
          transparent 50%
        ),
        radial-gradient(
          circle at 80% 20%,
          rgba(var(--color-accent), 0.05) 0%,
          transparent 50%
        );
      pointer-events: none;
    }

    .hero .container {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 5rem;
      align-items: center;
      position: relative;
      z-index: 1;
    }

    .hero-title {
      font-family: var(--font-hero);
      font-size: clamp(2.5rem, 5vw, 4rem);
      font-weight: 700;
      line-height: 1.15;
      margin-bottom: 2rem;
      color: rgb(var(--color-text));
    }

    .hero-subtitle {
      font-size: 1.25rem;
      line-height: 1.7;
      color: rgb(var(--color-text-muted));
      margin-bottom: 2rem;
    }

    .hero-badge {
      display: inline-flex;
      padding: 0.75rem 1.5rem;
      background: rgba(var(--color-accent), 0.15);
      border: 1px solid rgba(var(--color-accent), 0.3);
      border-radius: var(--radius-lg);
      color: rgb(var(--color-accent));
      font-size: 0.875rem;
      font-weight: 500;
      margin-bottom: 2rem;
    }

    .hero-cta {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
    }

    /* Value Props */
    .value-props {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
      margin-bottom: 2rem;
    }

    .value-prop {
      font-size: 1rem;
      color: rgb(var(--color-text));
      padding: 0.75rem 1rem;
      background: rgba(var(--color-surface-variant), 0.5);
      border-left: 3px solid rgb(var(--color-primary));
      border-radius: var(--radius-sm);
      transition: all 0.2s ease;
    }

    .value-prop:hover {
      background: rgba(var(--color-surface-variant), 0.7);
      transform: translateX(4px);
    }

    .value-prop strong {
      color: rgb(var(--color-primary));
      font-weight: 600;
    }

    /* Chat Preview */
    .chat-preview {
      border-radius: var(--radius-lg);
      overflow: hidden;
      box-shadow: var(--shadow-xl);
      background: rgb(var(--color-surface));
      border: 1px solid rgba(var(--color-border), 0.3);
    }

    .chat-header {
      display: flex;
      align-items: center;
      padding: 1.25rem 1.5rem;
      gap: 1rem;
      background: rgba(var(--color-surface-variant), 0.3);
      border-bottom: 1px solid rgba(var(--color-border), 0.2);
    }

    .agent-avatar {
      font-size: 2rem;
      width: 48px;
      height: 48px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 50%;
      background: linear-gradient(
        135deg,
        rgb(var(--color-primary)),
        rgb(var(--color-primary-hover))
      );
    }

    .agent-info {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
    }

    .agent-name {
      font-weight: 600;
      font-size: 1rem;
      color: rgb(var(--color-text));
    }

    .agent-status {
      font-size: 0.875rem;
      color: rgb(var(--color-text-muted));
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .agent-status::before {
      content: "‚óè";
      color: rgb(var(--color-success));
      font-size: 0.75rem;
    }

    .chat-messages {
      padding: 1.5rem;
      display: flex;
      flex-direction: column;
      gap: 1.25rem;
      min-height: 320px;
      background: rgba(var(--color-surface-variant), 0.1);
    }

    .message {
      display: flex;
      gap: 0.75rem;
      max-width: 90%;
      animation: slideIn 0.3s ease;
    }

    .user-message {
      align-self: flex-end;
      flex-direction: row-reverse;
    }

    .agent-message {
      align-self: flex-start;
      animation: slideIn 0.3s ease 1s backwards;
    }

    .message-avatar {
      font-size: 1.5rem;
      flex-shrink: 0;
    }

    .message-content {
      padding: 1rem 1.25rem;
      border-radius: var(--radius-lg);
      font-size: 0.95rem;
      line-height: 1.6;
      flex: 1;
      text-align: left;
      word-wrap: break-word;
      overflow-wrap: break-word;
      hyphens: auto;
    }

    .user-message .message-content {
      background: rgb(var(--color-primary));
      color: rgb(var(--color-text-button));
      border-bottom-right-radius: 0.25rem;
    }

    .agent-message .message-content {
      background: rgba(var(--color-surface-variant), 0.8);
      color: rgb(var(--color-text));
      border-bottom-left-radius: 0.25rem;
      border: 1px solid rgba(var(--color-border), 0.7);
    }

